{% example 'Card mit Text und Button' %}
<wm-card>
  <div slot="content">
    <p>Wenn Sie sich testen lassen wollen, gibt es in Wien verschiedene kostenfreie Angebote.</p>
    <wm-button full="true">
      <button>
        <wm-icon iconid="microscope"></wm-icon>
        Testangebote
      </button>
    <wm-button>
  </div>
</wm-card>
{% endexample %}

{% example 'Card mit Tags' %}
<wm-card size="l">
  <h3 slot="heading">
    Öffnungszeiten
  </h3>
  <div slot="content">
    <p>
      Montag bis Freitag: 9 bis 20 Uhr<br />
      Samstag, Sonntag und Feiertage: 8 bis 20 Uhr
    </p>
    <p>
      <strong>Ab 1. September:</strong><br />
      Montag bis Freitag: 9 bis 19 Uhr<br />
      Samstag, Sonntag und Feiertage: 8 bis 19 Uhr
    </p>
  </div>

  <div slot="postcontent">
    <wm-tag>
      <a href="#">
        Baden
      </a>
    </wm-tag>
    <wm-tag>
      <a href="#">
        Radfahren
      </a>
    </wm-tag>
  </div>
</wm-card>
{% endexample %}

