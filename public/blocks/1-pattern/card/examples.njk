{% example 'Infobox' %}
<wm-card size="default">
  <wm-stack slot="content" equal="true" wrap="false" gap="l">
    <wm-list type="row">
      <ul>
        <li>
          <wm-icon iconid="clock"></wm-icon>
          Stand: Grundlagenerhebung
        </li>
        <li>
          <wm-icon iconid="pin"></wm-icon>
          <a href="#">
            15., Umgebung Westbahnhof
          </a>
        </li>
        <li>
          <wm-icon iconid="contact_alternative"></wm-icon>
          Beteiligung: Offen
        </li>
        <li>
          <wm-icon iconid="info"></wm-icon>
          <a href="https://www.mitte15.at/">Mitte 15 - Du und dein Grätzl. Gestalte mit!</a>
        </li>
      </ul>
    </wm-list>

    <figure>
      <a href="{{ mock.pattern.images.modal1.url }}" data-modal="images">
        <img src="{{ mock.pattern.images.modal1.src }}" width="530" alt="{{ mock.pattern.images.modal1.alt }}">
      </a>
      <figcaption>
        {{ mock.pattern.images.modal1.caption }}
      </figcaption>
    </figure>

    <template id="images">
      <wm-carousel single="1070" style="--carousel-shadow-offset: 0px">
        <figure>
          <img src="{{ mock.pattern.images.modal2.src }}" width="{{ mock.pattern.images.modal2.width }}" height="{{ mock.pattern.images.modal2.height }}" alt="{{ mock.pattern.images.modal2.alt }}">

          <figcaption>
            {{ mock.pattern.images.modal2.caption }}
          </figcaption>
        </figure>
        <figure>
          <img src="{{ mock.pattern.images.modal3.src }}" width="{{ mock.pattern.images.modal2.width }}" height="{{ mock.pattern.images.modal2.height }}" alt="{{ mock.pattern.images.modal3.alt }}">

          <figcaption>
            {{ mock.pattern.images.modal3.caption }}
          </figcaption>
        </figure>
        <figure>
          <img src="{{ mock.pattern.images.modal4.src }}" width="{{ mock.pattern.images.modal2.width }}" height="{{ mock.pattern.images.modal2.height }}" alt="{{ mock.pattern.images.modal4.alt }}">

          <figcaption>
            {{ mock.pattern.images.modal4.caption }}
          </figcaption>
        </figure>
      </wm-carousel>
    </template>
  </wm-stack>
</wm-card>
{% endexample %}


