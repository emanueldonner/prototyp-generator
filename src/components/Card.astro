---
export interface Props {
  title: string
  icon: string
}

const { icon, title } = Astro.props
---

<div class="card">
  <span class="material-symbols-outlined">
    {icon}
  </span>
  <p>{title}</p>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    cursor: pointer;
    /* height: 100px; */
    background: #f0efea;
    color: darkslategrey;
    border-radius: 0.4rem;
    transition: opacity 0.2s ease;
    text-align: center;
  }

  .card:hover {
    opacity: 0.8;
  }
  .card span {
    width: 24px;
    height: 24px;
    display: block;
  }
</style>
